<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/normal_white"></RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fond_bois_papier">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/changeProfile"
                android:layout_width="400dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_background_normal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/change_profile"
                    android:textColor="@color/normal_white"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/deleteProfile"
                android:layout_width="400dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_background_normal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/delete_profile"
                    android:textColor="@color/normal_white"
                    android:textSize="20dp" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
