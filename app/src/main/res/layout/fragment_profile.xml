<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.principal.projetolivia.main.ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stats_olivia"
        android:scaleType="fitXY"
        android:id="@+id/statsBackground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bandeau_gauche"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#e6007e"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileNameText"
                android:text="UserName"
                android:textSize="25sp"
                android:gravity="center"
                    android:textColor="@color/normal_white"/>

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/bandeau_droite"/>

            <TextView
                android:id="@+id/profileAgeText"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="22 ans"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:columnWidth="400dp"
                android:id="@+id/gridProfile"
                android:stretchMode="spacingWidthUniform"
                android:layout_centerInParent="true"
                android:gravity="center"
                ></GridView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
